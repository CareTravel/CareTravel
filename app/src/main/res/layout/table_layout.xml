<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tableLayout1"
    android:layout_marginHorizontal="40dp"
    android:layout_marginTop="30dp"
    android:stretchColumns="0,1,2"
    android:background="@android:color/transparent"
    android:padding="1dp">
    <TableRow
        android:background="@android:color/transparent">
        <TextView
            android:id="@+id/plan_day1"
            android:layout_span="3"
            android:layout_width="match_parent"
            android:background="@drawable/day_plan"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:background="@android:color/transparent">
            <TextView
                android:text="시간"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:background="@android:color/transparent"
                android:padding="1dp"/>
            <TextView
                android:text="내용"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@android:color/transparent"
                android:padding="1dp"/>
            <TextView
                android:text="비고"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:background="@android:color/transparent"
                android:padding="1dp"/>
        </TableRow>
        <TableRow
            android:id="@+id/plan_row1"
            android:background="@android:color/transparent">
            <Button
                android:id="@+id/plan_time2"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:text="시간 선택"
                android:background="@android:color/transparent"/>
            <EditText
                android:id="@+id/edit_text3"
                android:layout_height="50dp"
                android:hint="내용 입력"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:inputType="text"/>
            <EditText
                android:id="@+id/edit_text4"
                android:layout_height="50dp"
                android:hint="내용 입력"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:inputType="text"/>
        </TableRow>
        <TableRow
            android:id="@+id/empty_row_template"
            android:background="@android:color/transparent"
            android:visibility="gone">
            <Button
                android:id="@+id/plan_time3"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:text="시간 선택"
                android:background="@android:color/transparent" />
            <EditText
                android:id="@+id/edit_text5"
                android:layout_height="50dp"
                android:hint="내용 입력"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:inputType="text"/>
            <EditText
                android:id="@+id/edit_text6"
                android:layout_height="50dp"
                android:hint="내용 입력"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:inputType="text"/>
        </TableRow>
</TableLayout>
