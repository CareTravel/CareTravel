<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--    기능3 경로보기 화면(장소지정)-->

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#BCD1F1">

        <Button
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_arrow_back_ios_24"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:padding="20dp"
            android:text="경로보기"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="위치 등록"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/map_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="180dp"
        android:text="저장하기" />
</LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="장소를 입력하세요."
            android:inputType="text"
            android:maxLines="1"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="검색"
            app:layout_constraintLeft_toRightOf="@id/search_bar"
            android:layout_marginLeft="150dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="0dp" />

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/pathRecycler"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:scrollbars="vertical"-->
<!--            tools:ignore="MissingConstraints"-->
<!--            tools:layout_editor_absoluteX="0dp"-->
<!--            tools:layout_editor_absoluteY="47dp" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:id="@+id/pathTableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="5dp"
        android:stretchColumns="0,1"
        android:background="@android:color/transparent"
        android:padding="1dp">
        <TableRow
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/plan_day"
                android:layout_span="2"
                android:layout_width="match_parent"
                android:background="@drawable/day_plan"
                android:text="1일차"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />
        </TableRow>
        <TableRow
            android:background="@android:color/transparent">
            <TextView
                android:text="장소"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:background="@android:color/transparent"
                android:padding="1dp"/>
            <TextView
                android:text="설명"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@android:color/transparent"
                android:padding="1dp"/>
        </TableRow>
        <TableRow
            android:id="@+id/path_row"
            android:background="@android:color/transparent">
            <TextView
                android:id="@+id/location1"
                android:text="장소"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@android:color/transparent"
                android:padding="1dp"/>
            <EditText
                android:id="@+id/edit_text3"
                android:layout_height="50dp"
                android:hint="내용 입력"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:inputType="text"/>
        </TableRow>
        <TableRow
            android:id="@+id/empty_row_template"
            android:background="@android:color/transparent"
            android:visibility="gone">
            <Button
                android:id="@+id/location3"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:text="시간 선택"
                android:background="@android:color/transparent" />
            <EditText
                android:id="@+id/edit_text4"
                android:layout_height="50dp"
                android:hint="내용 입력"
                android:background="@android:color/transparent"
                android:padding="3dp"
                android:textAlignment="center"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:inputType="text"/>
        </TableRow>
    </TableLayout>

</LinearLayout>